#!/bin/bash

. ./tests/tcp_4down.sh
. ./tests/tcp_4up.sh
. ./tests/rrul.sh
. ./tests/tcp_bidirectional.sh
. ./tests/bursts_11e.sh
. ./tests/rtt_fair_var_mixed.sh

#########################################################################################
#GLOBAL VALUES

plot_width=26
plot_height=14
test_length=300 
#Check if directory is present and create if not
test_results_dir=$1
[ -f "$test_results_dir" ] || mkdir -p "$test_results_dir"

host=$2

#########################################################################################



current_user="$(whoami)"
current_system_name="$(uname -a | awk '{print $1}')"

echo "You are working under user $current_user"

if [ "$current_system_name" = "Linux" ] ; then

    echo "You are running this script on Lunix."
    sleep 1
    echo "GOOD LUCK..."
    
    if [ "$current_user" = "root" ] ; then

        echo "ERROR: PLEASE RUN THIS SCRIPT FROM YOUR REGULAR USER"
        exit 0

    fi


elif [ "$current_system_name" = "Darwin" ] ; then

    echo "You are running this script on MacOSX"
    sleep 1
    echo "GOOD LUCK..."
    
fi

